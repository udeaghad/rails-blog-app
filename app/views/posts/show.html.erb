<h1>Here is a list of all posts for a given user and for a given post</h1>
<h3><%= link_to 'Create New Post', new_user_post_path(@post[0].users_id) %>  </h3>


<div>
<% @post.includes(:users).each do | post | %>
  
  <div style='border: 1px solid black;'>
    <h4>Post by <%= post.users.name %> </h>
    <span> Comments: <%= post.comments_counter || 0 %>  Likes: <%= post.likes_counter || 0 %> </span>
    <h3>Title: <%= post.title %> </h3>
    <p> <%= post.text %> </p>
    
  </div>
<% end %>
</div>
<div style='border: 1px solid black;'>
<% @comments.includes(:users).each do |commenter| %>
  <p> <strong><%= commenter.users.name %>:</strong> <%= commenter.text %> </p>
  
<% end %>
<h3><%= link_to 'Add new comment', new_user_post_comment_path(@post[0].users_id,@post[0].id) %>  </h3>

</div>

</div>