<h2 class=login-txt>Sign up</h2>

<%= render 'layouts/devise_flash' %>

<div class='form-container' >

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "name-field" %>
  </div>

  <div class="field">
   <%= f.label :bio %><br />
    <%= f.text_area :bio, class: "bio-field" %>
  </div>

  <div class="field">
    <%= f.label :photo %><br />
    <%= f.text_field :photo, class: "photo-field" %>
  </div>



  <div >
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'email-field'  %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "pwd-field" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "pwd-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn-submit" %>
  </div>
 
<% end %>

<%= render "users/shared/links" %>
 </div>